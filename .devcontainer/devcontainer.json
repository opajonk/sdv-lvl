{
    "name": "Asciidoctor",
    "image": "mcr.microsoft.com/devcontainers/base:dev-ubuntu-24.04",
    "features": {
        "ghcr.io/braun-daniel/devcontainer-features/asciidoc:1": {
            "version": "1.3.0"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "asciidoctor.asciidoctor-vscode",
                "jebbs.plantuml"
            ],
            "settings": {
                "asciidoc.asciidoctor_command": "asciidoctor -r asciidoctor-diagram",
                "asciidoc.preview.useEditorStyle": false,
                "asciidoc.use_asciidoctor_js": false
            }
        }
    }
}